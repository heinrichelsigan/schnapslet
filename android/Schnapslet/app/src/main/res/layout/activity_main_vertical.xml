<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:id="@+id/linearLayoutCCard1">
            <ImageView
                android:id="@+id/imageCOut1"
                android:contentDescription="@string/imOut1_text"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:minHeight="96dp"
                android:minWidth="72dp"
                android:src="@drawable/e"
                android:visibility="visible"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="2dp"
            android:id="@+id/linearLayoutCCard0">

            <ImageView
                android:id="@+id/imageCOut0"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:contentDescription="@string/imOut0_text"
                android:minHeight="96dp"
                android:minWidth="72dp"
                android:src="@drawable/e" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/playedCard1"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="100dp">
            <ImageView
                android:id="@+id/imOut1"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:contentDescription="@string/imOut1_text"
                android:minWidth="72dp"
                android:minHeight="96dp"
                android:src="@drawable/e" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playedCard0"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="100dp">
            <ImageView
                android:id="@+id/imOut0"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:contentDescription="@string/imOut0_text"
                android:minWidth="72dp"
                android:minHeight="96dp"
                android:src="@drawable/e" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imMerge"
            android:layout_width="144dp"
            android:layout_height="96dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/imMerge_text"
            android:minWidth="144dp"
            android:minHeight="96dp"
            android:src="@drawable/anim_merge"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/atouCard"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginStart="256dp"
            android:layout_marginTop="100dp">

            <ImageView
                android:id="@+id/imAtou"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:contentDescription="@string/imAtou_text"
                android:minWidth="72dp"
                android:minHeight="96dp"
                android:src="@drawable/n0"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/talonCard"
            android:layout_width="96dp"
            android:layout_height="72dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="114dp">

            <ImageView
                android:id="@+id/imTalon"
                android:layout_width="96dp"
                android:layout_height="72dp"
                android:contentDescription="@string/imTalon_text"
                android:minWidth="96dp"
                android:minHeight="72dp"
                android:src="@drawable/t"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerCard0"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/im0"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:contentDescription="@string/im0_text"
                android:minWidth="72dp"
                android:minHeight="96dp"
                android:src="@drawable/n0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerCard1"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/im1"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:contentDescription="@string/im1_text"
                android:minWidth="72dp"
                android:minHeight="96dp"
                android:src="@drawable/n0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerCard2"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/im2"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:contentDescription="@string/im2_text"
                android:minWidth="72dp"
                android:minHeight="96dp"
                android:src="@drawable/n0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerCard3"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/im3"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:contentDescription="@string/im3_text"
                android:minWidth="72dp"
                android:minHeight="96dp"
                android:src="@drawable/n0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerCard4"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginStart="292dp"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/im4"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:contentDescription="@string/im4_text"
                android:minWidth="72dp"
                android:minHeight="96dp"
                android:src="@drawable/n0" />
        </LinearLayout>

        <TextView
            android:id="@+id/tMes"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="300dp"
            android:minWidth="340dp"
            android:minHeight="24dp"
            android:text="@string/tMes_text" />

        <Button
            android:id="@+id/b20a"
            android:layout_width="96dp"
            android:layout_height="32dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="4dp"
            android:enabled="false"
            android:minWidth="96dp"
            android:minHeight="32dp"
            android:text="@string/b20a_text"
            android:textSize="11sp" />

        <Button
            android:id="@+id/b20b"
            android:layout_width="96dp"
            android:layout_height="32dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="36dp"
            android:enabled="false"
            android:minWidth="96dp"
            android:minHeight="32dp"
            android:text="@string/b20b_text"
            android:textSize="11sp" />

        <Button
            android:id="@+id/bChange"
            android:layout_width="96dp"
            android:layout_height="32dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="68dp"
            android:enabled="false"
            android:minWidth="96dp"
            android:minHeight="32dp"
            android:text="@string/bChange_text"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tRest"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="40dp"
            android:minWidth="32dp"
            android:minHeight="32dp"
            android:textSize="11sp"
            android:tooltipText="@string/sRest"
            android:text="@string/tRest_text" />

        <TextView
            android:id="@+id/tPoints"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="40dp"
            android:minWidth="32dp"
            android:minHeight="32dp"
            android:textSize="11sp"
            android:tooltipText="@string/sPoints"
            android:text="@string/tPoints_text" />

        <Button
            android:id="@+id/bContinue"
            android:layout_width="96dp"
            android:layout_height="32dp"
            android:layout_marginStart="184dp"
            android:layout_marginTop="4dp"
            android:enabled="true"
            android:minWidth="96dp"
            android:minHeight="32dp"
            android:text="@string/bContinue_text"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tDbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="360dp"
            android:minWidth="340dp"
            android:minHeight="192dp"
            android:text="@string/tDbg_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>