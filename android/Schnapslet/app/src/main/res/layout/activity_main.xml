<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:id="@+id/linearLayoutCCard1">
                <ImageView
                    android:id="@+id/imageCOut1"
                    android:contentDescription="@string/imOut1_text"
                    android:layout_width="72dp"
                    android:layout_height="96dp"
                    android:minHeight="96dp"
                    android:minWidth="72dp"
                    android:src="@drawable/e"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="0dp"
                android:id="@+id/linearLayoutCCard0">

                <ImageView
                    android:id="@+id/imageCOut0"
                    android:layout_width="72dp"
                    android:layout_height="96dp"
                    android:contentDescription="@string/imOut0_text"
                    android:minHeight="96dp"
                    android:minWidth="72dp"
                    android:src="@drawable/e" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="98dp">

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:id="@+id/playedCard1">
                <ImageView
                    android:id="@+id/imOut1"
                    android:contentDescription="@string/imOut1_text"
                    android:layout_width="72dp"
                    android:layout_height="96dp"
                    android:minHeight="96dp"
                    android:minWidth="72dp"
                    android:src="@drawable/e"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="0dp"
                android:id="@+id/playedCard0">

                <ImageView
                    android:id="@+id/imOut0"
                    android:layout_width="72dp"
                    android:layout_height="96dp"
                    android:contentDescription="@string/imOut0_text"
                    android:minHeight="96dp"
                    android:minWidth="72dp"
                    android:src="@drawable/e" />
            </LinearLayout>
			<ImageView 
				android:id="@+id/imMerge"
                android:contentDescription="@string/imMerge_text"
                android:layout_width="144dp"
                android:layout_height="96dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="0dp"
                android:minWidth="144dp"
                android:minHeight="96dp"
                android:visibility="visible"
                android:src="@drawable/anim_merge" />
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:layout_marginStart="240dp"
                android:layout_marginTop="0dp"
                android:id="@+id/atouCard">
                <ImageView
                    android:id="@+id/imAtou"
                    android:contentDescription="@string/imAtou_text"
                    android:layout_width="72dp"
                    android:layout_height="96dp"
                    android:minWidth="72dp"
                    android:minHeight="96dp"
                    android:visibility="visible"
                    android:src="@drawable/n0" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="72dp"
                android:layout_marginStart="172dp"
                android:layout_marginTop="14dp"
                android:id="@+id/talonCard">
                <ImageView
                    android:id="@+id/imTalon"
                    android:contentDescription="@string/imTalon_text"
                    android:layout_width="96dp"
                    android:layout_height="72dp"
                    android:minWidth="96dp"
                    android:minHeight="72dp"
                    android:visibility="invisible"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="200dp">

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:id="@+id/playerCard0"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/im0"
                    android:contentDescription="@string/im0_text"
                    android:layout_width="72dp"
                    android:layout_height="96dp"
                    android:src="@drawable/n0"
                    android:minWidth="72dp"
                    android:minHeight="96dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="0dp"
                android:id="@+id/playerCard1">

                <ImageView
                    android:id="@+id/im1"
                    android:contentDescription="@string/im1_text"
                    android:layout_width="72dp"
                    android:layout_height="96dp"
                    android:src="@drawable/n0"
                    android:minWidth="72dp"
                    android:minHeight="96dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="0dp"
                android:id="@+id/playerCard2">

                <ImageView
                    android:id="@+id/im2"
                    android:contentDescription="@string/im2_text"
                    android:layout_width="72dp"
                    android:layout_height="96dp"
                    android:src="@drawable/n0"
                    android:minWidth="72dp"
                    android:minHeight="96dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:layout_marginStart="216dp"
                android:layout_marginTop="0dp"
                android:id="@+id/playerCard3">

                <ImageView
                    android:id="@+id/im3"
                    android:contentDescription="@string/im3_text"
                    android:layout_width="72dp"
                    android:layout_height="96dp"
                    android:src="@drawable/n0"
                    android:minWidth="72dp"
                    android:minHeight="96dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:layout_marginStart="288dp"
                android:layout_marginTop="0dp"
                android:id="@+id/playerCard4">

                <ImageView
                    android:id="@+id/im4"
                    android:contentDescription="@string/im4_text"
                    android:layout_width="72dp"
                    android:layout_height="96dp"
                    android:src="@drawable/n0"
                    android:minWidth="72dp"
                    android:minHeight="96dp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="96dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="300dp">

            <TextView
            android:id="@+id/tMes"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="0dp"

            android:layout_marginTop="300dp"
            android:minHeight="32dp"
            android:minWidth="360dp"
            android:textSize="12sp"
            android:text="@string/tMes_text"
            />

            <Button
                android:id="@+id/bContinue"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="36dp"
                android:enabled="true"
                android:minHeight="32dp"
                android:minWidth="120dp"
                android:text="@string/bContinue_text"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bChange"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="72dp"
                android:enabled="false"
                android:minHeight="32dp"
                android:minWidth="120dp"
                android:text="@string/bChange_text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tRest"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="36dp"
                android:minHeight="32dp"
                android:minWidth="48dp"
                android:textSize="12sp"
                android:textAlignment="center"
                android:tooltipText="@string/sRest"
                android:text="@string/tRest_text" />

            <TextView
                android:id="@+id/tPoints"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="72dp"
                android:minHeight="32dp"
                android:minWidth="48dp"
                android:textAlignment="center"
                android:textSize="12sp"
                android:tooltipText="@string/sPoints"
                android:text="@string/tPoints_text" />

            <Button
                android:id="@+id/b20a"
                android:layout_width="132dp"
                android:layout_height="32dp"
                android:layout_marginStart="192dp"
                android:layout_marginTop="36dp"
                android:minHeight="32dp"
                android:minWidth="120dp"
                android:text="@string/b20a_text"
                android:textSize="11sp" />

            <Button
                android:id="@+id/b20b"
                android:layout_width="132dp"
                android:layout_height="32dp"
                android:layout_marginStart="192dp"
                android:layout_marginTop="72dp"
                android:minHeight="32dp"
                android:minWidth="120dp"
                android:text="@string/b20b_text"
                android:textSize="11sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tDbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="408dp"
            android:minWidth="340dp"
            android:minHeight="108dp"
            android:text="@string/tDbg_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12sp"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>